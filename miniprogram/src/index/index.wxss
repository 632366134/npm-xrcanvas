/* pages/index.wxss */
/**app.wxss**/
.container {
    height: 100vh;
    width: 100vw;
    flex-direction: column;
    box-sizing: border-box;
}

.error {
    position: fixed;
    font-size: 32rpx;
    top: 50%;
    left: 50%;
    transform: translateX(-50%);
}

.p_scan ,.p_loading{
    position: fixed;
    top: 0;
    left: 0;
    z-index: 100;
    width: 100vw;
    height: 100vh;
}

.p_scan_image ,.p_loading_image{
    width: 100%;
    height: 100%;
}