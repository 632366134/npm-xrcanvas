/* pages/index.wxss */
/**app.wxss**/
.container {
    height: 100vh;
    width: 100vw;
    flex-direction: column;
    box-sizing: border-box;
}

.error {
    position: fixed;
    font-size: 32rpx;
    top: 50%;
    left: 50%;
    z-index: 102;
    transform: translateX(-50%);
}

.p_scan,
.p_loading,
.p_guide,
.p_ending {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 100;
    width: 100vw;
    height: 100vh;
}

.p_loading {
    background-color: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    color: #fff;
}

.p_loading_image {
    margin-top: -50%;
}

.progress-box {
    width: 46vw;
    font-size: 22px;
    margin: 30rpx 0;
}

.waitText {
    text-align: left;
    font-size: 20rpx;
    transform: translateX(-50%)  translateY(-50%);
}

.p_ending2 {
    padding: 50rpx;
}

.p_scan_image,
.p_guideFlag_image,
.p_guideFlag_video,
.p_ending_image {
    width: 100%;
    height: 100%;
}

.bgc_Audio {
    position: fixed;
    right: 10%;
    top: 0;
    z-index: 101;
}

.bgc_Audio_image {
    width: 80rpx;
}