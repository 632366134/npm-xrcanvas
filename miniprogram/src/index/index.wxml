<view class="container">
    <xr-canvas id="xr-canvas" wx:if="{{xrShow}}" width="{{renderWidth}}" height="{{renderHeight}}" style="width:{{width}}px;height:{{height}}px;display:block;z-index: 99; " bind:handleAssetsLoaded="loadingChange" bind:handleAssetsProgress="loadingProgress" bind:stayPage="stayPage" workflowType="{{workflowType}}" p_arData="{{p_arData}}" workflowData="{{workflowData}}" bind:showInteractMedia="showInteractMedia" bind:bgcAudioFlagChange="bgcAudioFlagChange"></xr-canvas>
    <view class="error" wx:if="{{unSupport}}">{{unSupport}}</view>
    <view class="p_guide" wx:if="{{p_guideFlag}}">
        <image class="p_guideFlag_image" wx:if="{{workflowData.p_guide.image_url}}" src="{{workflowData.p_guide.image_url}}" mode="" />
        <video controls="{{false}}" autoplay class="p_guideFlag_video" wx:if="{{workflowData.p_guide.video_url}}" src="{{workflowData.p_guide.video_url}}" />
    </view>
    <view class="p_scan" wx:if="{{p_scanFlag}}">
        <image class="p_scan_image" src="{{workflowData.p_scan.image_url}}" mode="aspectFill" />
    </view>
    <view class="p_loading" wx:if="{{p_loadingFlag}}">
        <image class="p_loading_image" src="{{image_url}}" mode="aspectFit" />
        <text>AR场景元素加载中...</text>
        <view class="progress-box">
            <progress stroke-width="8" border-radius="20" activeColor="{{progressColor}}" backgroundColor="#999" percent="{{percent}}" />
        </view>
        <view class="waitText">预计等待时间{{textDuration}}秒...</view>

    </view>
    <view class="p_ending2" wx:if="{{p_endingFlag}}">
        <import src="../wxParse/wxParse.wxml" />
        <template is="wxParse" data="{{wxParseData:article.nodes}}" />
    </view>
    <view class="p_ending" wx:if="{{eventFlag}}" bind:tap="eventFlagChange">
        <image class="p_guideFlag_image" wx:if="{{event_image}}" src="{{event_image}}" mode="aspectFit" />
        <video controls="{{false}}" autoplay class="p_guideFlag_video" wx:if="{{event_url}}" src="{{event_url}}" />
    </view>
    <view class="bgc_Audio" wx:if="{{bgc_AudioFlag}}" bind:tap="bgcMusicChange">
        <image class="bgc_Audio_image" src="/assets/soundsize.png" mode="aspectFit" />
    </view>
</view>